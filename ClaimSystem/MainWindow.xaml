<Window x:Class="ClaimSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaimSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Welcome to the Claim Management System" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,20,0,0" 
                   FontSize="24" 
                   FontWeight="Bold"/>
        <Button Content="Submit Claim" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="10,70,0,0" 
                Width="120" 
                Height="30" Click="Button_Click"/>
        <Button Content="View Claim" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="10,110,0,0" 
                Width="120" 
                Height="30" Click="Button_Click_1"/>
    </Grid>
</Window>
